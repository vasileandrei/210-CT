print ("Value has to be set to 2,\n    primeCheck(number, value)")

"""This function checks if the number is prime"""

def primeCheck(number, value):
    if number < 0 :
        raise ValueError
    else:
        if value < number:
            if number % value == 0:
                return False
            else:
                return primeCheck(number, value+1)            
    return True
    
    
