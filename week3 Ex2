print ("Only NUMBER has to be given a value")

"""This function checks if the number is prime"""

def primeCheck(number, value=2):
    if value != 2:
        raise ValueError("Value should have the value 2")
    else:
        if value < number:
            if number % value == 0:
                return False
            else:
                return primeCheck(number, value+1)            
    return True

#Complexity: O(n)

    
    
